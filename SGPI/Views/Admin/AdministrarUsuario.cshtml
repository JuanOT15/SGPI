@model SGPI.Models.Usuario

@{
    ViewData["Title"] = "Administrar Usuario";
}



<h2>@ViewBag.mensaje</h2>

<head>
    <style>
            .header {
            text-align: center;
            height: 470px;
            padding: 12px;
            background-image: url("https://www.todofondos.net/wp-content/uploads/mas-de-67-fondos-de-pantalla-de-fondo-blanco.-fondo-de-pantalla-blancos.jpg")
        }
      </style>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
  
</head>
<div class="header">
    <h1 class="title">Administrar usuario</h1>
<style>
        body {
          background-image: url('https://static.vecteezy.com/system/resources/previews/001/176/927/original/blue-and-white-abstract-background-vector.jpg');
          background-repeat: no-repeat;
          background-attachment: fixed;
          background-size: 100% 100%;
        }
   </style>

<form method="post">
	<div class="barra-busqueda">
		<label asp-for="Documento">Buscar documento</label>
		<input asp-for="Documento" type="text" placeholder="Documento aquí...">
		<button type="submit" class="btn btn-secondary">Buscar</button>
	</div>

	<div class="bltbl">
		<table>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                <th>@Html.DisplayNameFor(model => model.Rol)</th>
                <th>@Html.DisplayNameFor(model => model.Genero)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Documento)</th>
                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                <th>@Html.DisplayNameFor(model => model.IdPrograma)</th>
                @*<th></th>*@
            </tr>

            <tr>
                <td class="td nombre-usuario">@Html.DisplayFor(modelItem => modelItem.Nombre)</td>
                <td class="td apellido-usuario">@Html.DisplayFor(modelItem => modelItem.Apellido)</td>
                <td class="td rol-usuario">@Html.DisplayFor(modelItem => modelItem.Rol)</td>
                <td class="td genero-usuario">@Html.DisplayFor(modelItem => modelItem.Genero)</td>
                <td class="td email-usuario">@Html.DisplayFor(modelItem => modelItem.Email)</td>
                <td class="td documento-usuario">@Html.DisplayFor(modelItem => modelItem.Documento)</td>
                <td class="td documento-usuario">@Html.DisplayFor(modelItem => modelItem.Telefono)</td>
                <td class="td documento-usuario">@Html.DisplayFor(modelItem => modelItem.IdPrograma)</td>
                @*<td>
           <button class="btn btn-secondary">Editar</button>
           <button class="btn btn-secondary">eliminar</button>
        </td>*@
            </tr>
			
				
					<td>
					   @Html.ActionLink("Editar", "Edit", new { IdUsuario = Model.IdUsuario })
					</td>
                    <td>
                        @Html.ActionLink("Eliminar", "Delete", new { IdUsuario = Model.IdUsuario })
                    </td>
					
			
		 </table>
	</div>
    </form>
    </div>

