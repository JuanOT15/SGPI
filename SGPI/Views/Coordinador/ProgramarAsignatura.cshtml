@model SGPI.Models.Programacion
@{
    ViewData["Title"] = "Programar Asignatura";
}
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .header {
            text-align: center;
            height: 800px;
            padding: 12px;
            background-image: url("https://img.freepik.com/vector-gratis/diseno-fondo-blanco-estilo-perspectiva-3d-forma-hexagonal_1017-27558.jpg?w=2000")
        }
    </style>
</head>
<body>
    <style>
        body {
            background-image: url('https://static.vecteezy.com/system/resources/previews/001/176/927/original/blue-and-white-abstract-background-vector.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 100%;
        }
    </style>

    <div class="header">
        <center>
            <h1>Asignaturas</h1>
            <br><br><br><br><br><br><br><br><br>
            <form method="post">
                <div class="Asignatura-contenedor">
                    <div class="select-semestre">
                        <label asp-for="Semestre">Semestre</label>
                        <br><br>
                        <input asp-for="Semestre" type="number" min="1" max="10">
                    </div>
                    <div class="select-programa">
                        <br>
                        <label>Asignatura</label>
                        <br>
                        @Html.DropDownList("IdPrograma", new SelectList(ViewBag.Programa, "IdPrograma", "ValPrograma"));
                    </div>
                </div><br><br>

                <div>
                    <table>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FechaInicio)</th>
                            <th>@Html.DisplayNameFor(model => model.FechaFin)</th>
                            <th>@Html.DisplayNameFor(model => model.Bloque)</th>
                            <th>@Html.DisplayNameFor(model => model.Salon)</th>
                            <th>@Html.DisplayNameFor(model => model.IdModulo)</th>
                        </tr>
                        <tr>
                            <td>
                                <div>
                                    <input asp-for="FechaInicio" type="date">
                                </div>
                            </td>
                            <td>
                                <div>
                                    <input asp-for="FechaFin" type="date">
                                </div>
                            </td>
                            <td>
                                <input asp-for="Bloque" type="number">
                            </td>
                            <td>
                                <input asp-for="Salon" type="number">
                            </td>
                            <td>
                                <input asp-for="IdModulo" type="number">
                            </td>
                        </tr>
                    </table>
                </div>

                <div class="buttons">
                    <br>
                    <br><br><br><br> <br><br><br><br> <br><br><br><br>
                    <a href="https://localhost:44384/Coordinador/MenuCoordinador" <button type="button" class="btn  btn-outline-secondary float-right">Volver</button></a>
                    <button class="btn btn-primary" type="submit">Guardar</button>
                </div>
            </form>
        </center>
    </div>
</body>
</html>
