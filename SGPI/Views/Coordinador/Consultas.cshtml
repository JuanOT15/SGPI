@model SGPI.Models.Usuario
@{
    ViewData["Title"] = "Consultas";
}

<head>
    <style>
        .header {
            height: 700px;
            padding: 12px;
            background-image: url("https://www.todofondos.net/wp-content/uploads/mas-de-67-fondos-de-pantalla-de-fondo-blanco.-fondo-de-pantalla-blancos.jpg")
        }
    </style>
</head>
<body>
    <div class="header">
        <br>
        <h1><center>Sistema de Gestion De Posgrado</h1></center>
        <br />
        <br />
        <h2>Consultas:</h2>
        <br />
        <form method="post">
            <div class="barra-busqueda">
                <label asp-for="Documento">Buscar documento</label>
                <input asp-for="Documento" type="text" placeholder="Documento aquí...">
                <button type="submit" class="btn btn-secondary">Buscar</button>
            </div>

            <br />
            <br />
            <div class="bltbl">
                <table style="width: 100%">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Apellido)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Documento)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Rol)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Genero)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IdPrograma)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Telefono)
                        </th>



                    </tr>
                    <tr>
                        <td class="td nombre-usuario">@Html.DisplayFor(modelItem => modelItem.Nombre)</td>
                        <td class="td apellido-usuario">@Html.DisplayFor(modelItem => modelItem.Apellido)</td>
                        <td class="td documento-usuario">@Html.DisplayFor(modelItem => modelItem.Documento)</td>
                        <td class="td rol-usuario">@Html.DisplayFor(modelItem => modelItem.Rol)</td>
                        <td class="td genero-usuario">@Html.DisplayFor(modelItem => modelItem.Genero)</td>
                        <td class="td documento-usuario">@Html.DisplayFor(modelItem => modelItem.IdPrograma)</td>
                        <td class="td email-usuario">@Html.DisplayFor(modelItem => modelItem.Email)</td>
                        <td class="td documento-usuario">@Html.DisplayFor(modelItem => modelItem.Telefono)</td>
                    </tr>
                </table>
                <br />
                <br />
                <a href="https://localhost:44384/Coordinador/MenuCoordinador" <button type="button" class="btn  btn-outline-secondary float-right">Volver</button></a>
            </div>
        </form>
    </div>

</body>

</html>

